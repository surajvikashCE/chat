<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.v7.widget.CardView
            android:layout_marginStart="8dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="2dp"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/all_users_element_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/londa"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@mipmap/londa" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/all_users_element_name"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Name"/>

                <ImageView
                    android:id="@+id/all_users_element_online_image"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    android:background="@drawable/online_dot_image"
                    android:layout_gravity="center" />

            </LinearLayout>

            <TextView
                android:id="@+id/all_users_element_status"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=""/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF000000"/>

</LinearLayout>